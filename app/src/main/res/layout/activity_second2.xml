<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5B414455"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info"
        android:text="ВАШ ЛОГИН"
        android:textSize="30dp"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/proLogin"
        android:layout_marginTop="15dp"
        android:layout_margin="15dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/proInfo"
        android:text="Вход был выполенен с помощью"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/proLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/proFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/proInfo"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>