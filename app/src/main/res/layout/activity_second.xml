<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5B414455"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/regLogin"
        android:hint="Login"
        android:textSize="30dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@+id/regPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/regPassword"
        android:hint="Ведите пароль"
        android:textSize="30dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/regisration"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/regisration"
        android:layout_width="match_parent"
        android:hint="SIGN UP"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="250sp"
        android:textSize="30dp"
        android:layout_marginStart="80sp"
        android:layout_marginEnd="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>